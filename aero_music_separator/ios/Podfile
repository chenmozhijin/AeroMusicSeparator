platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Generated.xcconfig'),
    __FILE__,
  )
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Run flutter pub get first."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise 'FLUTTER_ROOT not found in Generated.xcconfig.'
end

def ensure_aero_separator_xcframework
  script_path = File.expand_path('../native/tools/apple/build_ios_ffi_xcframework.sh', __dir__)
  pod_root = File.expand_path('../native/ios/AeroSeparatorFFI', __dir__)
  xcframework_path = File.join(pod_root, 'AeroSeparatorFFI.xcframework')

  force_rebuild = ENV['AMS_FORCE_REBUILD_XCFRAMEWORK'] == '1'
  return if File.exist?(xcframework_path) && !force_rebuild

  sim_archs = ENV['AMS_IOS_SIM_ARCHS'] || 'arm64,x86_64'
  puts "[AeroSeparatorFFI] Building XCFramework (sim archs: #{sim_archs})"
  ok = system({ 'AMS_IOS_SIM_ARCHS' => sim_archs }, 'bash', script_path, sim_archs)
  raise 'Failed to build AeroSeparatorFFI.xcframework' unless ok
end

require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root,
)

flutter_ios_podfile_setup
ensure_aero_separator_xcframework

target 'Runner' do
  pod 'SDWebImage', :modular_headers => true
  pod 'DKImagePickerController/PhotoGallery', :modular_headers => true
  pod 'DKPhotoGallery', :modular_headers => true
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  pod 'AeroSeparatorFFI', :path => '../native/ios/AeroSeparatorFFI'
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  arm64_only_ci = ENV['AMS_IOS_CI_ARM64_ONLY'] == '1'
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    next unless arm64_only_ci

    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
    end
  end
end
